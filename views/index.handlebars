<h1>Eat-Da-Burger!</h1>
  <div class="container">
    <div class="row">
      <div class="col">
        {{#each burgers}}
          {{#unless this.devoured}}
              {{burger_name}} <form action="burgers/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="0">
                <button class="btn" type="submit">Bottoms up!</button>
              </form>
          {{/unless}}
        {{/each}}
      </div>

        <div class="col">
          <h1>Yum!</h1>
          {{#each burgers}}
            {{#if this.devoured}}
              <div class='burgerEaten'>
                <div>
                  {{this.burger_name}}
                </div>
              </div>
            {{/if}}
          {{/each}}
        </div>
    </div>
  </div>

<h2 id="title2">Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name">
      <button type="submit" class="addburger">Submit</button>
    </form>
  </div>
</div>