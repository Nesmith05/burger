<h1>Eat da Burger!</h1>

<div class="container float-left" id="eat">
  <div class="row">
    <div class="sm-col5">
      <ul>
        {{#each burgers}} 
          {{#unless this.devoured}} 
            <li>
              {{this.id}} {{this.burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                  <button class="btn" type="submit">Eat Me!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<h2>Yum! That was great!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.id}} {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
